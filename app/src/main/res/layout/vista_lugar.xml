<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:id="@+id/nombre"
                android:gravity="center"
                android:textSize="25dp"
                android:text="nombre lugar"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/LogoTipo"
                    android:contentDescription="Logo del tipo"
                    android:src="@drawable/otros"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tipo"
                    android:text="tipo lugar"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:src="@android:drawable/ic_menu_directions"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/direccion"
                    android:text="direccion"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:src="@android:drawable/ic_menu_call"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/telefono"
                    android:text="telefono"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/url"
                    android:text="url"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/comentario"
                    android:text="comentario"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/fecha"
                    android:text="fecha"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="40dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/hora"
                    android:text="hora"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <RatingBar
                android:layout_width="wrap_content"
                android:id="@+id/valoracion"
                android:layout_gravity="center_horizontal"
                android:rating="3"
                android:layout_height="wrap_content"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/foto"
                    android:contentDescription="fotografia"
                    android:src="@drawable/foto_epsg"
                    android:layout_height="150dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/logo_galeria"
                        android:onClick="galeria"
                        android:layout_width="40dp"
                        android:contentDescription="Logo galeria"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_height="40dp"/>
                <ImageView
                        android:layout_width="40dp"
                        android:onClick="tomarFoto"
                        android:contentDescription="camara"
                        android:src="@android:drawable/ic_menu_camera"
                        android:layout_height="40dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>